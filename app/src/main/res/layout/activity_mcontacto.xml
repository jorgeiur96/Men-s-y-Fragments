<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.unamjorge.practicas.mascotapetagram.Contactos">

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Contacto"
        android:id="@+id/textViewTitleContacto"
        android:layout_gravity="center"
        android:layout_below="@id/miActionBar"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutEditTextnameContacto"
        android:layout_below="@id/textViewTitleContacto"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/nameContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="25dp"
        android:id="@+id/layoutEditTextcorreoContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEditTextnameContacto"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/correoContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="26dp"

        android:id="@+id/layoutEditTextmensajeContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutEditTextcorreoContacto">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mensajeContacto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mensaje"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_marginLeft="140dp"
        android:id="@+id/buttonMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutEditTextmensajeContacto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Enviar" />



</LinearLayout>
