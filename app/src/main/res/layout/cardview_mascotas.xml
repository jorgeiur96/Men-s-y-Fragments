<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvtaxonomia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="16dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    android:padding="@dimen/cardview_compat_inset_shadow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/IMGfotoCard"
            android:layout_width="371dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/img1" />


           <!--android:src="@drawable/icon" -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

              <ImageButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/ImgbntCardview"
                  android:src="@drawable/hueso2"
                  android:background="@color/cardview_light_background"

                  />
                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tvCardNombre"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    />

                <TextView

                    android:layout_marginLeft="15dp"
                    android:id="@+id/tvCardCantidad"
                    android:textSize="20dp"
                    android:text="5"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/ImgGeneralHueso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:src="@drawable/hueso"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>